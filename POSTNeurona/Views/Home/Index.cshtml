                <hr />
                <div class="card main-card border">

                    <article class="card-body">

                        <h4 class="card-title mt-3 text-center">RESPONSE</h4>

                        <div class="mb-3 row" id="responseContainer">
                            <textarea class="form-control col-12 input-background" id="responseTextarea" cols="100" rows="10"></textarea>
                        </div>
                        <button id="copyResponse" type="button" class="btn btn-primary mx-3 my-1">Copiar</button>
                        <button id="clearResponse" type="button" class="btn btn-custom mx-3 my-1">Limpiar</button>
                        <button id="jsonFormat" type="button" class="btn btn-custom mx-3 my-1">JSON Formatter</button>
                        <button id="xmlFormat" type="button" class="btn btn-custom mx-3 my-1">XML Formatter</button>
                        <button id="exportJson" type="button" class="btn btn-custom mx-3 my-1">Export JSON</button>
                        <button id="exportXml" type="button" class="btn btn-custom mx-3 my-1">Export XML</button>
