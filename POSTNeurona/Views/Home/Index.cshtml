            <div class="col-md-12">
                <div class="card main-card border">
                    <article class="card-body">
                        <h4 class="card-title text-center">POSTNeurona</h4>
                        <p class="card-title text-center">Consultar endpoints</p>
                    <form id="myForm">
                        <div class="card-inside row">
                            <div class="col-md-12">
                                <label for="url_input" class="form-label"> URL</label>
                                <input id="url_input" list="datalistOptions" name="url_input" type="text" class="form-control form-control-lg input-background col-12" style="font-size:medium" aria-describedby="basic-addon3">
                                <datalist id="datalistOptions" class="input-background"></datalist>
                            </div>
                        </div>
                        <div class="card-inside row">
                            <div class="col-md-4">
                                <label for="method_api" class="form-label"> PRODUCTO</label>
                                <select id="method_api" name="method_api" class="form-select input-background col-12" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" onchange="cargarSubMetodos();">
                                    <option value="">Seleccione una opci&oacute;n...</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label for="sub_metodo" class="form-label">TOKENS</label>
                                <select name="sub_metodo" id="sub_metodo" class="form-select input-background col-12" disabled aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                                    <option value="">Seleccione una opci&oacute;n...</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label for="method_input" class="form-label"> METODO</label>
                                <select id="method_input" name="method_input" class="form-select input-background col-12" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                                    <option selected value="default">Seleccione</option>
                                    <option value="1">GET</option>
                                    <option value="2">POST</option>
                                    <option value="3">PUT</option>
                                    @*<option disabled value="4">DELETE</option>*@
                                </select>
                            </div>
                            </div>
                            <div class="card-inside row justify-content-lg-end" id="requestTextareaContainer">
                                <label for="method_input" class="form-label"> BODY</label>
                                <textarea class="form-control col-12 input-background" id="requestTextarea" name="requestTextarea" cols="5" rows="5"></textarea>
                                <button id="clearRequest" type="button" class="btn btn-custom col col-2 mx-3 my-1 btn-sm">Limpiar</button>
                                <button id="jsonFormatRequest" type="button" class="btn btn-custom col col-2 my-1  btn-sm">JSON Formatter</button>
                            </div>
